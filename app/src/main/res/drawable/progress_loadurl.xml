<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#44000F00" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="225"
                    android:startColor="#FF2E7E"
                    android:centerColor="#6A49EB"
                    android:endColor="#23C9DE"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>