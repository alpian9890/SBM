<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/cosmic_gradient_bg2"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#2a2a8c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/captchaImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#F5F5F5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_gravity="bottom|end">
                <TextView
                    android:id="@+id/textImageDimension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200x50"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:background="#80000000"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/textImageExtension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNG"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:background="@color/lavender"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cosmic_gradient_bg"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Label: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/heading"/>
                <TextView
                    android:id="@+id/textLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC123"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/accent_heading"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Path: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Images/abc123.png"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025-03-10 12:00:00"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                app:icon="@drawable/sharp_edit_square_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                android:paddingVertical="12dp"
                android:backgroundTint="#6a49eb"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:letterSpacing="0.05"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>