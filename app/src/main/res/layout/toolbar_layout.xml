<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_gravity="center_horizontal"
        android:background="@color/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:paddingHorizontal="5dp"
                android:layout_marginHorizontal="2dp"
                android:id="@+id/myMenu"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_menu_24"/>

            <ImageView
                android:paddingHorizontal="5dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/myHome"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_home_24"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/mainAddressBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <!-- Title Address Bar (Default visible) -->
            <LinearLayout
                android:id="@+id/titleAddressBar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext"
                android:padding="7dp"
                android:gravity="center_vertical">

                <!-- PageSecure Icon -->
                <ImageView
                    android:id="@+id/pageSecure"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_auto_awesome_24"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Secure"/>


                <!-- TextView for Domain Display -->
                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Splash Browser"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_refresh_24"
                    android:id="@+id/refreshPage"/>

            </LinearLayout>

            <ImageView
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add"
                android:id="@+id/addNewTab"/>

            <LinearLayout
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:paddingHorizontal="5dp"
                    android:id="@+id/prevPage"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sharp_chevron_left_24"/>

                <ImageView
                    android:paddingHorizontal="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/nextPage"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sharp_chevron_right_24"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</merge>