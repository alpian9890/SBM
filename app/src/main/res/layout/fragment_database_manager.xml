<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database Manager"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textCurrentDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Database: Internal"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonOpenDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select External Database"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonUseInternalDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Internal Database" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: External databases must have compatible structure with captcha data"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:textStyle="italic" />

</LinearLayout>