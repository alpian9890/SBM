<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootBottomsheetSW"
    android:padding="16dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutAddressBar1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:padding="7dp"
            android:gravity="center_vertical">

            <!-- PageSecure Icon -->
            <ImageView
                android:id="@+id/pageSecure1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_auto_awesome_24"
                android:layout_marginEnd="8dp"
                android:contentDescription="Secure"/>


            <!-- TextView for Domain Display -->
            <TextView
                android:id="@+id/titleTab1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Splash Browser"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_refresh_24"
                android:id="@+id/refreshTab1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayout1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:imeOptions="actionSearch" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddressBar2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:padding="7dp"
            android:gravity="center_vertical">

            <!-- PageSecure Icon -->
            <ImageView
                android:id="@+id/pageSecure2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_auto_awesome_24"
                android:layout_marginEnd="8dp"
                android:contentDescription="Secure"/>


            <!-- TextView for Domain Display -->
            <TextView
                android:id="@+id/titleTab2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Splash Browser"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_refresh_24"
                android:id="@+id/refreshTab2"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayout2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:imeOptions="actionSearch" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etLayoutTitleKB"
            android:layout_marginEnd="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Page Titlle"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTitleKB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:id="@+id/btnSaveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"/>

    </LinearLayout>

</LinearLayout>
