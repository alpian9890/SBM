<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootBottomsheetSW"
    android:padding="16dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutAddressBar1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:padding="7dp"
            android:gravity="center">

            <!-- PageSecure Icon -->
            <ImageView
                android:id="@+id/pageSecure1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_auto_awesome_24"
                android:layout_marginEnd="8dp"
                android:contentDescription="Secure"/>


            <!-- TextView for Domain Display -->
            <TextView
                android:id="@+id/titleTab1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Splash Browser"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_refresh_24"
                android:id="@+id/refreshTab1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayout1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext"
                    android:inputType="textUri"
                    android:hint="@string/search_or_type_url"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddressBar2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/edittext"
            android:padding="7dp"
            android:gravity="center">

            <!-- PageSecure Icon -->
            <ImageView
                android:id="@+id/pageSecure2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_auto_awesome_24"
                android:layout_marginEnd="8dp"
                android:contentDescription="Secure"/>


            <!-- TextView for Domain Display -->
            <TextView
                android:id="@+id/titleTab2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Splash Browser"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_refresh_24"
                android:id="@+id/refreshTab2"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etLayout2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search2"
                    android:background="@drawable/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:hint="@string/search_or_type_url"
                    android:imeOptions="actionSearch" 
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etLayoutTitleKB"
            android:layout_marginEnd="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Page Title"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTitleKB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:id="@+id/btnSaveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F42B7B"
            android:textColor="@color/black"
            android:text="Save"/>

    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btnPointerVisibilty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=" Visible "
            android:textOff="Invisible"
			android:checked="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pointer Visibility"
            android:fontFamily="monospace"
            android:textSize="9sp"
            android:textColor="#F42B7B"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
	
	<FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@drawable/black_lavender"
        android:layout_height="match_parent">
		
		<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- On/Off Calculator Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On/Off Calculator :"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CTRL + ESC"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CTRL + NUMPED_DOT"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Start/Pause Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start/Pause :"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ALT + NUMP-7 (tab-1)"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ALT + NUMP-9 (tab-2)"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Exit/Close Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exit/Close :"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CTRL + ALT + NUMP-7 (tab-1)"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CTRL + ALT + NUMP-9 (tab-2)"
                android:textColor="#FFFF00"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

    </ScrollView>
		
	</FrameLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_marginHorizontal="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Speed"/>
            <TextView
                android:id="@+id/speedTestWPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WPM"
                android:fontFamily="monospace"/>

        </LinearLayout>

        <ToggleButton
            android:id="@+id/btnPlayPauseWPM"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/toggle_play_pause"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

</LinearLayout>
</LinearLayout>